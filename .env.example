# Priority Protector Environment Variables
# Copy this file to .env and fill in your actual credentials

# IBM watsonx Orchestrate
# Get these from: https://cloud.ibm.com (watsonx Orchestrate instance)
WO_DEVELOPER_EDITION_SOURCE=orchestrate
WO_INSTANCE=your_watsonx_instance_url_here
WO_API_KEY=your_watsonx_api_key_here

# Google Calendar API
# Get these from: https://console.cloud.google.com
# 1. Create a project
# 2. Enable Google Calendar API
# 3. Create OAuth credentials (Desktop app)
# 4. Download credentials.json to project root
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Slack Integration
# Get these from: https://api.slack.com/apps
# 1. Create a Slack app
# 2. Enable Incoming Webhooks
# 3. Add to your workspace
SLACK_BOT_TOKEN=your_slack_bot_token_here
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Demo Mode (set to True for deployment without Google OAuth)
DEMO_MODE=False
